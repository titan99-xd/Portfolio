{
  "compilerOptions": {
    // Module and target
    "module": "commonjs",
    "moduleResolution": "Node",
    "ignoreDeprecations": "6.0", // optional, silences node10 warnings
    "target": "ES6",

    // Project structure
    "rootDir": "./src",
    "outDir": "./dist",

    // ES module interop
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,

    // Type checking
    "strict": true, // enables strict mode including strictNullChecks
    "strictNullChecks": true, // required for exactOptionalPropertyTypes
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

    // Source maps & declarations
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Node environment types
    "types": ["node"],

    // JSX support (if you ever share code with frontend)
    "jsx": "react-jsx",

    // Module detection
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true
  },

  // Include all TS files in src folder
  "include": ["src/**/*"],

  // Exclude node_modules
  "exclude": ["node_modules", "dist"]
}
